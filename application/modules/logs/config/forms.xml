                </options>
            </username>
            <password>
                <type>password</type>
                <options>
                    <label>password:</label>
                    <size>40</size>
                    <validators>
                        <notempty>
                            <validator>NotEmpty</validator>
                            <options>
                                <messages>
                                    <isEmpty>Your password is required</isEmpty>
                                </messages>
                            </options>
                        </notempty>                        
                    </validators>
                    <filters>
                        <trim>
                            <filter>StringTrim</filter>
                        </trim>
                    </filters>
                    <class></class>
                    <required>true</required>
                </options>
            </password>
            <submit>
                <type>submit</type>
                <ignore>true</ignore>
                <options>
                    <label>Submit</label>
                    <class>viewall</class>
                    <order>4</order>
                </options>
            </submit>
        </elements>
    </editlog>  
