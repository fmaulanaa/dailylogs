<?xml version="1.0" encoding="UTF-8"?>
<forms>
    <addlog>
        <action>/log/add</action>
        <method>post</method>
        <id>addLogForm</id>
        <name>addLogForm</name>
        <elements>
            <logsummary>
                <type>text</type>
                <options>
                    <label>Log Summary:</label>                    
                    <size>50</size>
                    <validators>
                        <notempty>
                            <validator>NotEmpty</validator>
                            <options>
                                <messages>
                                    <isEmpty>The log summary is required</isEmpty>
                                </messages>
                            </options>
                        </notempty>
                    </validators>
                    <filters>
                        <trim>
                            <filter>StringTrim</filter>
                        </trim>
                    </filters>
                    <class></class>
                    <required>true</required>
                </options>
            </logsummary>        
            <logbody>
                <type>textarea</type>
                <options>
                    <label>Log Details:</label>
                    <cols>70</cols>
                    <rows>15</rows>
                    <validators>
                        <notempty>
                            <validator>NotEmpty</validator>
                            <options>
                                <messages>
                                    <isEmpty>The log details are required</isEmpty>
                                </messages>
                            </options>
                        </notempty>
                    </validators>
                    <filters>
                        <trim>
                            <filter>StringTrim</filter>
                        </trim>
                    </filters>
                    <class></class>
                    <required>true</required>
                </options>
            </logbody>
            <user_id>
                <type>hidden</type>
                <options>
                    <validators>
                        <notempty>
                            <validator>NotEmpty</validator>
                            <options>
                                <messages>
                                    <isEmpty>Your user id is required</isEmpty>
                                </messages>
                            </options>
                        </notempty>                        
                    </validators>
                    <filters>
                        <trim>
                            <filter>StringTrim</filter>
                        </trim>
                    </filters>
                    <class></class>
                    <required>true</required>
                </options>
            </user_id>
            <submit>
                <type>submit</type>
                <ignore>true</ignore>
                <options>
                    <label>Submit</label>                    
                    <class>viewall</class>
                    <order>4</order>
                </options>
            </submit>
        </elements>
    </addlog>
    <editlog>
        <action>/log/edit</action>
        <method>post</method>
        <id>editLogForm</id>
        <name>editLogForm</name>
        <elements>
            <logsummary>
                <type>text</type>
                <options>
                    <label>Log Summary:</label>                    
                    <size>70</size>
                    <validators>
                        <notempty>
                            <validator>NotEmpty</validator>
                            <options>
                                <messages>
                                    <isEmpty>The log summary is required</isEmpty>
                                </messages>
                            </options>
                        </notempty>
                    </validators>
                    <filters>
                        <trim>
                            <filter>StringTrim</filter>
                        </trim>
                    </filters>
                    <class></class>
                    <required>true</required>
                </options>
            </logsummary>        
            <logbody>
                <type>textarea</type>
                <options>
                    <label>Log Details:</label>
                    <cols>50</cols>
                    <rows>15</rows>
                    <validators>
                        <notempty>
                            <validator>NotEmpty</validator>
                            <options>
                                <messages>
                                    <isEmpty>The log details are required</isEmpty>
                                </messages>
                            </options>
                        </notempty>
                    </validators>
                    <filters>
                        <trim>
                            <filter>StringTrim</filter>
                        </trim>
                    </filters>
                    <class></class>
                    <required>true</required>
                </options>
            </logbody>
            <user_id>
                <type>hidden</type>
                <options>
                    <validators>
                        <notempty>
                            <validator>NotEmpty</validator>
                            <options>
                                <messages>
                                    <isEmpty>Your user id is required</isEmpty>
                                </messages>
                            </options>
                        </notempty>                        
                    </validators>
                    <filters>
                        <trim>
                            <filter>StringTrim</filter>
                        </trim>
                    </filters>
                    <class></class>
                    <required>true</required>
                </options>
            </user_id>
            <id>
                <type>hidden</type>
                <options>
                    <validators>
                        <notempty>
                            <validator>NotEmpty</validator>
                            <options>
                                <messages>
                                    <isEmpty>The log id is required</isEmpty>
                                </messages>
                            </options>
                        </notempty>
                        <userid_exists>
                            <validator>Db_RecordExists</validator>
                            <options>
                                <table>logs</table>
                                <field>id</field>
                                <messages>
                                    <noRecordFound>The log id doesn't exist</noRecordFound>
                                </messages>
                            </options>
                        </userid_exists>                         
                    </validators>
                    <filters>
                        <trim>
                            <filter>StringTrim</filter>
                        </trim>
                    </filters>
                    <class></class>
                    <required>true</required>
                </options>
            </id>
            <submit>
                <type>submit</type>
                <ignore>true</ignore>
                <options>
                    <label>Submit</label>
                    <class>viewall</class>
                    <order>4</order>
                </options>
            </submit>
        </elements>
    </editlog>  
    <deletelog>
        <action>/log/delete</action>
        <method>post</method>
        <id>deleteLogForm</id>
        <name>deleteLogForm</name>
        <elements>
            <id>
                <type>hidden</type>
                <options>
                    <validators>
                        <notempty>
                            <validator>NotEmpty</validator>
                            <options>
                                <messages>
                                    <isEmpty>The log id is required</isEmpty>
                                </messages>
                            </options>
                        </notempty>                        
                    </validators>
                    <filters>
                        <trim>
                            <filter>StringTrim</filter>
                        </trim>
                    </filters>
                    <class></class>
                    <required>true</required>
                </options>
            </id> 
            <user_id>
                <type>hidden</type>
                <options>
                    <validators>
                        <notempty>
                            <validator>NotEmpty</validator>
                            <options>
                                <messages>
                                    <isEmpty>Your user id is required</isEmpty>
                                </messages>
                            </options>
                        </notempty>                        
                    </validators>
                    <filters>
                        <trim>
                            <filter>StringTrim</filter>
                        </trim>
                    </filters>
                    <class></class>
                    <required>true</required>
                </options>
            </user_id>            
            <submit>
                <type>submit</type>
                <ignore>no</ignore>
                <value>yes</value>
                <options>
                    <label>Delete</label>
                </options>
            </submit>
            <reset>
                <type>submit</type>
                <ignore>no</ignore>
                <value>no</value>
                <options>
                    <label>DON'T Delete</label>
                </options>
            </reset>            
        </elements>
    </deletelog> 
</forms>