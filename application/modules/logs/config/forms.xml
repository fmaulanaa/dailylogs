<?xml version="1.0" encoding="UTF-8"?>
<forms>
    <addlog>
        <action>/log/add</action>
        <method>post</method>
        <id>addLogForm</id>
        <name>addLogForm</name>
        <elements>
            <body>
                <type>textarea</type>
                <options>
                    <label>Log Details:</label>
                    <cols>50</cols>
                    <rows>15</rows>
                    <validators>
                        <notempty>
                            <validator>NotEmpty</validator>
                            <options>
                                <messages>
                                    <isEmpty>The log details are required</isEmpty>
                                </messages>
                            </options>
                        </notempty>
                    </validators>
                    <filters>
                        <trim>
                            <filter>StringTrim</filter>
                        </trim>
                    </filters>
                    <class></class>
                    <required>true</required>
                </options>
            </body>
            <log_date>                
                <type>text</type>
                <size>12</size>
                <options>
                    <label>Log Date:</label>
                    <validators>
                        <notempty>
                            <validator>NotEmpty</validator>
                            <options>
                                <messages>
                                    <isEmpty>A log date is required</isEmpty>
                                </messages>
                            </options>
                        </notempty>                        
                    </validators>
                    <filters>
                        <trim>
                            <filter>StringTrim</filter>
                        </trim>
                    </filters>
                    <class></class>
                    <required>true</required>
                </options>
            </log_date>
            <user_id>
                <type>hidden</type>
                <options>
                    <validators>
                        <notempty>
                            <validator>NotEmpty</validator>
                            <options>
                                <messages>
                                    <isEmpty>Your user id is required</isEmpty>
                                </messages>
                            </options>
                        </notempty>                        
                    </validators>
                    <filters>
                        <trim>
                            <filter>StringTrim</filter>
                        </trim>
                    </filters>
                    <class></class>
                    <required>true</required>
                </options>
            </user_id>
            <submit>
                <type>submit</type>
                <ignore>true</ignore>
                <options>
                    <label>Submit</label>
                    <class>viewall</class>
                    <order>4</order>
                </options>
            </submit>
        </elements>
    </addlog>
    <editlog>
